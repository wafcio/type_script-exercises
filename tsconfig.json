{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDirs": [
      "./src"
    ],
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
